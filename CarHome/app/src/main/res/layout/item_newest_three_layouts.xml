<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_newest_three_iv"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/fild" />

    <TextView
        android:id="@+id/item_newest_three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_newest_three_iv"
        android:text="驾驶室遭猛撞 看小轿车路口右转酿事故" />

    <TextView
        android:id="@+id/item_newest_three_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/item_newest_three_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_newest_three_iv"
        android:text="2016-05-10"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/item_newest_three_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_newest_three_title"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:text="6788播放"
        android:paddingBottom="10dp"/>

</RelativeLayout>