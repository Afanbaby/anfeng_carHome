<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/item_newest_five_iv"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:src="@mipmap/fild"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/item_newest_five_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_newest_five_iv"
        android:text="配置外观都满意 购置长安CS35 1.6L"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/item_newest_five_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_newest_five_title"
        android:layout_toRightOf="@id/item_newest_five_iv"
        android:text="2016-05-11"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/item_newest_five_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_newest_five_title"
        android:text="241回帖"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"/>

</RelativeLayout>