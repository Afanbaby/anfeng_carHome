<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_bulletin_detail_body_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_bulletin_detail_body_auother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/item_bulletin_detail_body_iv"
            android:text="李跃" />

        <TextView
            android:id="@+id/item_bulletin_detail_body_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_bulletin_detail_body_auother"
            android:layout_toRightOf="@id/item_bulletin_detail_body_iv"
            android:text="05/17 13:26" />

        <TextView
            android:id="@+id/item_bulletin_detail_body_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_bulletin_detail_body_iv"
            android:layout_margin="5dp"
            android:text="大家上午好，今天我们要试驾的车型是宝沃BX7，2.0T高功版，我们试驾体验马上开始，现在是车队调整时间。" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_bulletin_detail_body_bodyIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@mipmap/fild" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_bulletin_detail_body_Zambia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#9d9d9d"
            android:text="赞73" />

        <TextView
            android:id="@+id/item_bulletin_detail_body_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#9d9d9d"
            android:text="转发" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_bulletin_detail_body_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="#9d9d9d"
            android:text="19评论" ></TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_bulletin_detail_body_comment_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_bulletin_detail_body_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/item_bulletin_detail_body_comment_iv"
            android:text="南方人物" />

        <TextView
            android:id="@+id/item_bulletin_detail_body_comment_bady"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_bulletin_detail_body_comment_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/item_bulletin_detail_body_comment_iv"
            android:text="你是福田套壳的真心无语,哎...要做喷子也要专业点啊" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9d9d9d"
        android:hint="发表评论..."
        android:layout_margin="5dp"/>
</LinearLayout>